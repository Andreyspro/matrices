
{
  "version": "2.0.0",
  "tasks": [
    //All files ==============================================================================
    {
      "type": "shell",
      "label": "CPP run all files",
      "command": "/usr/bin/g++",
      "args": [
        "-Wall",
        "-std=c++11",
        "-O2",
        "${fileDirname}/*.cpp",
        "-o",
        "${fileDirname}/${fileBasenameNoExtension}",
        "-lboost_filesystem",
        "-lpthread"
        //"-Wl,-Bdynamic", "-lboost_filesystem",
        //"-Wl,-Bdynamic", "-lpthread"
      ],
      "options": {
        "cwd": "${fileDirname}"
      },
      "problemMatcher": ["$gcc"],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "detail": "Build file in directory"
    },
    {
      "type": "shell",
      "label": "CPP debug all files",
      "command": "/usr/bin/g++",
      "args": [
        "-Wall",
        "-std=c++11",
        "-O2",
        "-g",
        "${fileDirname}/*.cpp",
        "-o",
        "${fileDirname}/${fileBasenameNoExtension}",
        "-lboost_filesystem",
        "-lpthread"
      ],
      "options": {
        "cwd": "${fileDirname}"
      },
      "problemMatcher": ["$gcc"],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "detail": "Build file in directory with Debug"
    },
    //One file ==============================================================================
    {
      "type": "cppbuild",
      "label": "CPP run one file",
      "command": "g++",
      "args": [
        "-Wall",
        "${file}",
        "-O2",
        "-o",
        "${fileDirname}/${fileBasenameNoExtension}",
      ],
      "options": {
        "cwd": "${fileDirname}"
      },
      "problemMatcher": ["$gcc"],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "detail": "Build file in directory"
    },
    {
      "type": "cppbuild",
      "label": "CPP debug one file",
      "command": "g++",
      "args": [
        "-Wall",
        "-std=c++11",
        "-g",
        "${file}",
        "-o",
        "${fileDirname}/${fileBasenameNoExtension}"
        //"-lboost_filesystem"
      ],
      "options": {
        "cwd": "${fileDirname}"
      },
      "problemMatcher": ["$gcc"],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "detail": "Build file in directory with Debug"
    },
    {
      "type": "cppbuild",
      "label": "C run",
      "command": "gcc",
      "args": [
        "${fileDirname}/*.c",
        "-Wall",
        "-O2",
        "-o",
        "${fileDirname}/${fileBasenameNoExtension}"
      ],
      "options": {
        "cwd": "${fileDirname}"
      },
      "problemMatcher": ["$gcc"],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "detail": "Build file in directory"
    },
    {
      "type": "cppbuild",
      "label": "C debug",
      "command": "gcc",
      "args": [
        "-Wall",
        "-fdiagnostics-color=always",

        "-g",
        "${fileDirname}/*.c",
        "-o",
        "${fileDirname}/${fileBasenameNoExtension}"
      ],
      "options": {
        "cwd": "${fileDirname}"
      },
      "problemMatcher": ["$gcc"],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "detail": "Build file in directory with Debug"
    }
  ]
}
